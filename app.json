{
  "expo": {
    "name": "EventPass",
    "slug": "eventpass",
    "scheme": "eventpass",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Necesitamos usar la c치mara para tomar fotos y escanear c칩digos QR.",
        "NSLocationWhenInUseUsageDescription": "Necesitamos tu ubicaci칩n para mostrar c칩mo llegar a los eventos."
      },
      "config": {
        "googleMapsApiKey": "IOS_GOOGLE_MAPS_API_KEY_AQUI"
      }
    },
    "android": {
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "package": "com.eventpass.app",
      "config": {
        "googleMaps": {
          "apiKey": "ANDROID_GOOGLE_MAPS_API_KEY_AQUI"
        }
      }
    },
    "web": {
      "bundler": "metro"
    },
    "extra": {
      "eas": {
        "projectId": "RELLENAR_SI_USAN_EAS"
      }
    }
  }
}
